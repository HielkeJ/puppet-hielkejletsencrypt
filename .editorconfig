# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true
charset = utf-8

# Get rid of whitespace to avoid diffs with a bunch of EOL changes
trim_trailing_whitespace = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

# PHP-Files
[*.php]
indent_style = tab
indent_size = 2

[*.sh]
indent_style = tab
indent_size = 2
